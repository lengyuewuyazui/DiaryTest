<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#e0e0e0"
    tools:context="com.example.jinchen.diarytest.MainActivity">





    <android.support.design.widget.FloatingActionButton
        android:id="@+id/NewDiaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:borderWidth="0dp"
        app:elevation="15dp"
        app:pressedTranslationZ="15dp"
        android:src="@android:drawable/ic_menu_edit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/UndoNewDiaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:borderWidth="0dp"
        app:elevation="15dp"
        app:pressedTranslationZ="15dp"
        android:src="@android:drawable/ic_delete"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/SmailFace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        app:fabSize="mini"
        app:borderWidth="0dp"
        app:elevation="15dp"
        app:pressedTranslationZ="15dp"
        android:src="@mipmap/smile"
        android:layout_above="@+id/UndoNewDiaryButton"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/CoolFace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        app:fabSize="mini"
        app:borderWidth="0dp"
        app:elevation="15dp"
        app:pressedTranslationZ="15dp"
        android:src="@mipmap/cool"
        android:visibility="invisible"
        android:layout_above="@+id/SmailFace"
        android:layout_centerHorizontal="true" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/LoveFace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        app:fabSize="mini"
        android:visibility="invisible"
        app:borderWidth="0dp"
        app:elevation="15dp"
        app:pressedTranslationZ="15dp"
        android:src="@mipmap/love"
        android:layout_above="@+id/CoolFace"
        android:layout_centerHorizontal="true" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/UpsetFace"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        app:fabSize="mini"
        app:borderWidth="0dp"
        app:elevation="15dp"
        app:pressedTranslationZ="15dp"
        android:src="@mipmap/upset"
        android:layout_above="@+id/LoveFace"
        android:layout_centerHorizontal="true" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ScaryFace"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        app:fabSize="mini"
        app:borderWidth="0dp"
        app:elevation="15dp"
        app:pressedTranslationZ="15dp"
        android:src="@mipmap/scary"
        android:layout_above="@+id/UpsetFace"
        android:layout_centerHorizontal="true" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/AngryFace"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        app:fabSize="mini"
        app:borderWidth="0dp"
        app:elevation="15dp"
        app:pressedTranslationZ="15dp"
        android:src="@mipmap/angry"
        android:layout_above="@+id/ScaryFace"
        android:layout_centerHorizontal="true" />



    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:gravity="top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/NewDiaryButton"
        android:layout_below="@+id/toolbar" />
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="8dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>








</RelativeLayout>
